<Page x:Class="Diploma1._1.View.Pages.Schedule"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Diploma1._1.View.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Schedule"
      Loaded="Page_Loaded">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Панель фильтрации -->
        <Border Grid.Row="0" Background="#F5F9FC" BorderBrush="#DCE7F0" BorderThickness="0,0,0,1" Padding="12">
            <StackPanel>
                <TextBlock Text="Параметры фильтрации" FontSize="18" FontWeight="Bold" Margin="0,0,0,10" Foreground="#2C3E50"/>
                
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Фильтр по месяцу -->
                    <StackPanel Grid.Column="0" Grid.Row="0" Margin="5">
                        <TextBlock Text="Месяц:" Margin="0,0,0,5" FontWeight="SemiBold"/>
                        <ComboBox x:Name="MonthComboBox" Padding="5" Margin="0,0,0,10" SelectionChanged="MonthComboBox_SelectionChanged"/>
                    </StackPanel>

                    <!-- Фильтр по году -->
                    <StackPanel Grid.Column="1" Grid.Row="0" Margin="5">
                        <TextBlock Text="Год:" Margin="0,0,0,5" FontWeight="SemiBold"/>
                        <ComboBox x:Name="YearComboBox" Padding="5" Margin="0,0,0,10" SelectionChanged="YearComboBox_SelectionChanged"/>
                    </StackPanel>

                    <!-- Фильтр по курсу -->
                    <StackPanel Grid.Column="2" Grid.Row="0" Margin="5">
                        <TextBlock Text="Курс:" Margin="0,0,0,5" FontWeight="SemiBold"/>
                        <ComboBox x:Name="CourseComboBox" Padding="5" Margin="0,0,0,10" SelectionChanged="CourseComboBox_SelectionChanged"/>
                    </StackPanel>

                    <!-- Фильтр по кабинету -->
                    <StackPanel Grid.Column="0" Grid.Row="1" Margin="5">
                        <TextBlock Text="Кабинет:" Margin="0,0,0,5" FontWeight="SemiBold"/>
                        <ComboBox x:Name="CabinetComboBox" Padding="5" Margin="0,0,0,10" SelectionChanged="CabinetComboBox_SelectionChanged"/>
                    </StackPanel>

                    <!-- Фильтр по преподавателю -->
                    <StackPanel Grid.Column="1" Grid.Row="1" Margin="5">
                        <TextBlock Text="Преподаватель:" Margin="0,0,0,5" FontWeight="SemiBold"/>
                        <ComboBox x:Name="TeacherComboBox" Padding="5" Margin="0,0,0,10" SelectionChanged="TeacherComboBox_SelectionChanged"/>
                    </StackPanel>

                    <!-- Панель с кнопками -->
                    <StackPanel Grid.Column="2" Grid.Row="1" Margin="5" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Bottom">
                        <Button x:Name="ClearFilterButton" 
                                Content="Сбросить" 
                                Style="{StaticResource FilterButtonStyle}"
                                Background="#95A5A6"
                                Margin="0,0,10,0"
                                Height="30"
                                Width="100"
                                Click="ClearFilterButton_Click"/>

                        <Button x:Name="ApplyFilterButton" 
                                Content="Применить" 
                                Style="{StaticResource FilterButtonStyle}"
                                Height="30"
                                Width="100"
                                Click="ApplyFilterButton_Click"/>
                    </StackPanel>
                </Grid>
            </StackPanel>
        </Border>

        <!-- Область отображения расписания -->
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Заголовок с текущим периодом -->
            <Grid Grid.Row="0" Margin="10,10,10,5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Кнопка предыдущий месяц -->
                <Button x:Name="PreviousMonthButton" 
                        Grid.Column="0"
                        Content="&lt;"
                        Width="40"
                        Height="30"
                        Style="{StaticResource FilterButtonStyle}"
                        Click="PreviousMonthButton_Click"/>

                <!-- Текущий период -->
                <TextBlock x:Name="CurrentMonthText" 
                           Grid.Column="1"
                           Text="Расписание на Март 2025" 
                           FontSize="20" 
                           FontWeight="Bold" 
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           Foreground="#2C3E50"/>

                <!-- Кнопка следующий месяц -->
                <Button x:Name="NextMonthButton" 
                        Grid.Column="2"
                        Content="&gt;"
                        Width="40"
                        Height="30"
                        Style="{StaticResource FilterButtonStyle}"
                        Click="NextMonthButton_Click"/>
            </Grid>

            <!-- Кнопка добавления занятия -->
            <Button x:Name="AddScheduleButton" 
                    Grid.Row="1"
                    Content="Добавить занятие" 
                    Style="{StaticResource FilterButtonStyle}"
                    HorizontalAlignment="Right"
                    Margin="0,0,10,10"
                    Padding="15,8"
                    Click="AddScheduleButton_Click"/>

            <!-- Контейнер для календарного вида расписания -->
            <Grid Grid.Row="2" Margin="10,0,10,10">
                <Grid x:Name="ScheduleGrid">
                    <Grid.RowDefinitions>
                        <!-- Заголовок с днями недели -->
                        <RowDefinition Height="Auto"/>
                        <!-- Строки для временных интервалов и занятий -->
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <!-- Столбец для временных интервалов -->
                        <ColumnDefinition Width="Auto"/>
                        <!-- Столбцы для дней недели -->
                    </Grid.ColumnDefinitions>
                </Grid>
            </Grid>
        </Grid>
    </Grid>
</Page>
