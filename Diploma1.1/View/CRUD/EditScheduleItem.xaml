<Window x:Class="Diploma1._1.View.CRUD.EditScheduleItem"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Diploma1._1.View.CRUD"
        mc:Ignorable="d"
        Title="Редактирование расписания" Height="600" Width="400"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        WindowStyle="None"
        Background="White"
        BorderBrush="#4682B4"
        BorderThickness="1">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок окна -->
        <Grid Grid.Row="0" Background="#4682B4" MouseDown="Window_MouseDown">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <TextBlock Text="Редактирование расписания" 
                       Foreground="White" 
                       FontSize="16" 
                       FontWeight="Bold" 
                       Margin="10,5,0,5"/>
            
            <Button Grid.Column="1" 
                    Content="✕" 
                    Click="CancelButton_Click"
                    Background="Transparent"
                    BorderThickness="0"
                    Foreground="White"
                    FontSize="16"
                    Padding="10,5"/>
        </Grid>

        <!-- Основное содержимое -->
        <ScrollViewer Grid.Row="1" Margin="20">
            <StackPanel>
                <!-- Дата -->
                <TextBlock Text="Дата:" Margin="0,0,0,5"/>
                <DatePicker x:Name="dpDate" Margin="0,0,0,15"/>

                <!-- Время -->
                <TextBlock Text="Время:" Margin="0,0,0,5"/>
                <ComboBox x:Name="cmbxTime" Margin="0,0,0,15"/>

                <!-- Курс -->
                <TextBlock Text="Курс:" Margin="0,0,0,5"/>
                <ComboBox x:Name="cmbxCourse" Margin="0,0,0,15"/>

                <!-- Выбор типа (Обучающийся/Группа) -->
                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                    <RadioButton x:Name="rbStudent" Content="Обучающийся" 
                               IsChecked="True" Margin="0,0,20,0" 
                               Checked="RadioButton_Checked"/>
                    <RadioButton x:Name="rbGroup" Content="Группа" 
                               Checked="RadioButton_Checked"/>
                </StackPanel>

                <!-- Студент -->
                <StackPanel x:Name="spStudent" Visibility="Visible">
                    <TextBlock Text="Обучающийся:" Margin="0,0,0,5"/>
                    <ComboBox x:Name="cmbxStudent" Margin="0,0,0,15"/>
                </StackPanel>

                <!-- Группа -->
                <StackPanel x:Name="spGroup" Visibility="Collapsed">
                    <TextBlock Text="Группа:" Margin="0,0,0,5"/>
                    <ComboBox x:Name="cmbxGroup" Margin="0,0,0,15"/>
                </StackPanel>

                <!-- Кабинет -->
                <TextBlock Text="Кабинет:" Margin="0,0,0,5"/>
                <ComboBox x:Name="cmbxCabinet" Margin="0,0,0,15"/>

                <!-- Преподаватель -->
                <TextBlock Text="Преподаватель:" Margin="0,0,0,5"/>
                <ComboBox x:Name="cmbxTeacher" Margin="0,0,0,15"/>
            </StackPanel>
        </ScrollViewer>

        <!-- Кнопки -->
        <Grid Grid.Row="2" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Button Grid.Column="1" 
                    Content="Сохранить" 
                    Click="SaveButton_Click"
                    Background="#4682B4"
                    Foreground="White"
                    Padding="20,5"
                    Margin="0,0,10,0"/>

            <Button x:Name="DeleteButton"
                    Grid.Column="2" 
                    Content="Удалить" 
                    Click="DeleteButton_Click"
                    Background="#FF4444"
                    Foreground="White"
                    Padding="20,5"/>
        </Grid>
    </Grid>
</Window>
