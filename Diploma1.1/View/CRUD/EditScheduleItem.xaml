<Window x:Class="Diploma1._1.View.CRUD.EditScheduleItem"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Diploma1._1.View.CRUD"
        mc:Ignorable="d"
        Title="Редактирование расписания" Height="600" Width="400"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        WindowStyle="None"
        Background="White"
        BorderBrush="#4682B4"
        BorderThickness="1">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <Border Background="#F5F9FC" BorderBrush="#DCE7F0" BorderThickness="0,0,0,1" MouseDown="Window_MouseDown">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="Редактирование расписания" 
                       FontSize="18" 
                       FontWeight="Bold" 
                       Margin="15,10"
                       Foreground="#2C3E50"/>

                <Button Grid.Column="1" 
                    Content="✕" 
                    Click="CancelButton_Click"
                    Background="Transparent"
                    BorderThickness="0"
                    Foreground="#2C3E50"
                    FontSize="16"
                    Padding="15,5"
                    Height="40"/>
            </Grid>
        </Border>

        <!-- Основная область -->
        <ScrollViewer Grid.Row="1" Margin="15">
            <StackPanel>
                <!-- Дата -->
                <TextBlock Text="Дата:" 
                           Margin="0,0,0,5"
                           Foreground="#2C3E50"/>
                <DatePicker x:Name="DatePicker" 
                            Margin="0,0,0,15"
                            Height="30"/>

                <!-- Время -->
                <TextBlock Text="Время:" 
                           Margin="0,0,0,5"
                           Foreground="#2C3E50"/>
                <ComboBox x:Name="TimeComboBox" 
                          Margin="0,0,0,15"
                          Height="30"/>

                <!-- Курс -->
                <TextBlock Text="Курс:" 
                           Margin="0,0,0,5"
                           Foreground="#2C3E50"/>
                <ComboBox x:Name="CourseComboBox" 
                          Margin="0,0,0,15"
                          Height="30"/>

                <!-- Тип -->
                <TextBlock Text="Тип:" 
                           Margin="0,0,0,5"
                           Foreground="#2C3E50"/>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                    
                    <RadioButton x:Name="StudentRadioButton" 
                                Content="Обучающийся" 
                                Margin="0,0,20,0"
                                Checked="RadioButton_Checked"/>
                    
                    <RadioButton x:Name="GroupRadioButton" 
                                Content="Группа" 
                                IsChecked="True"
                                Checked="RadioButton_Checked"/>
                </StackPanel>

                <Grid>
                    <!-- Ученик -->
                    <StackPanel x:Name="spStudent" Visibility="Collapsed">
                        <TextBlock Text="Ученик:" 
                           Margin="0,0,0,5"
                           Foreground="#2C3E50"/>
                        <ComboBox x:Name="StudentComboBox" 
                          Margin="0,0,0,15"
                          Height="30"/>

                    </StackPanel>

                    <StackPanel x:Name="spGroup" Visibility="Visible">
                        <!-- Группа -->
                        <TextBlock Text="Группа:" 
                           Margin="0,0,0,5"
                           Foreground="#2C3E50"/>
                        <ComboBox x:Name="GroupComboBox" 
                          Margin="0,0,0,15"
                          Height="30"/>
                    </StackPanel>
                </Grid>
                
                <!-- Кабинет -->
                <TextBlock Text="Кабинет:" 
                           Margin="0,0,0,5"
                           Foreground="#2C3E50"/>
                <ComboBox x:Name="CabinetComboBox" 
                          Margin="0,0,0,15"
                          Height="30"/>

                <!-- Преподаватель -->
                <TextBlock Text="Преподаватель:" 
                           Margin="0,0,0,5"
                           Foreground="#2C3E50"/>
                <ComboBox x:Name="TeacherComboBox" 
                          Margin="0,0,0,15"
                          Height="30"/>
            </StackPanel>
        </ScrollViewer>

        <!-- Кнопки -->
        <Border Grid.Row="2" Background="#F5F9FC" BorderBrush="#DCE7F0" BorderThickness="0,1,0,0" Padding="15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Button Grid.Column="1" 
                    Content="Сохранить" 
                    Click="SaveButton_Click"
                    Background="#4682B4"
                    Foreground="White"
                    Padding="20,5"
                    Height="35"/>
            </Grid>
        </Border>
    </Grid>
</Window>
