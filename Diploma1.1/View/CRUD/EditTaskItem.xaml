<Window x:Class="Diploma1._1.View.CRUD.EditTaskItem"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Diploma1._1.View.CRUD"
        mc:Ignorable="d"
        Title="Редактирование задачи" 
        Height="450" 
        Width="400"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        WindowStyle="None"
        Background="White"
        BorderBrush="#4682B4"
        BorderThickness="1">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <Border Background="#F5F9FC" BorderBrush="#DCE7F0" BorderThickness="0,0,0,1" MouseDown="Window_MouseDown">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="Редактирование задачи" 
                       FontSize="18" 
                       FontWeight="Bold" 
                       Margin="15,10"
                       Foreground="#2C3E50"/>

                <Button Grid.Column="1" 
                    Content="✕" 
                    Click="CancelButton_Click"
                    Background="Transparent"
                    BorderThickness="0"
                    Foreground="#2C3E50"
                    FontSize="16"
                    Padding="15,5"
                    Height="40"/>
            </Grid>
        </Border>

        <!-- Основная область -->
        <ScrollViewer Grid.Row="1" Margin="15">
            <StackPanel>
                <!-- Дата создания -->
                <TextBlock Text="Дата создания:" 
                           Margin="0,0,0,5"
                           Foreground="#2C3E50"/>
                <DatePicker x:Name="CreationDatePicker" 
                            Margin="0,0,0,15"
                            Height="30"/>

                <!-- Дата выполнения -->
                <TextBlock Text="Дата выполнения:" 
                           Margin="0,0,0,5"
                           Foreground="#2C3E50"/>
                <DatePicker x:Name="DueDatePicker" 
                            Margin="0,0,0,15"
                            Height="30"/>

                <!-- Текст задачи -->
                <TextBlock Text="Текст задачи:" 
                           Margin="0,0,0,5"
                           Foreground="#2C3E50"/>
                <TextBox x:Name="TaskTextBox" 
                         Height="100"
                         TextWrapping="Wrap"
                         AcceptsReturn="True"
                         VerticalScrollBarVisibility="Auto"
                         Margin="0,0,0,15"/>

                <!-- Ученик -->
                <TextBlock Text="Ученик (необязательно):" 
                           Margin="0,0,0,5"
                           Foreground="#2C3E50"/>
                <ComboBox x:Name="StudentComboBox" 
                          Margin="0,0,0,15"
                          Height="30"/>

                <!-- Преподаватель -->
                <TextBlock Text="Преподаватель:" 
                           Margin="0,0,0,5"
                           Foreground="#2C3E50"/>
                <ComboBox x:Name="TeacherComboBox" 
                          Margin="0,0,0,15"
                          Height="30"/>

                <!-- Статус -->
                <CheckBox x:Name="StatusCheckBox" 
                          Content="Задача выполнена" 
                          Margin="0,0,0,15"/>
            </StackPanel>
        </ScrollViewer>

        <!-- Кнопки -->
        <Border Grid.Row="2" Background="#F5F9FC" BorderBrush="#DCE7F0" BorderThickness="0,1,0,0" Padding="15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Button Grid.Column="1" 
                    Content="Сохранить" 
                    Click="SaveButton_Click"
                    Background="#4682B4"
                    Foreground="White"
                    Padding="20,5"
                    Height="35"/>
            </Grid>
        </Border>
    </Grid>
</Window>
