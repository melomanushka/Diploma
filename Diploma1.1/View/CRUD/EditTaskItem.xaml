<Window x:Class="Diploma1._1.View.CRUD.EditTaskItem"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Редактирование задачи" 
        Height="450" 
        Width="400"
        WindowStartupLocation="CenterOwner"
        Background="White"
        BorderBrush="#4682B4"
        BorderThickness="1">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <Grid Grid.Row="0" Background="#F5F9FC" BorderBrush="#DCE7F0" BorderThickness="0,0,0,1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock Text="Редактирование задачи" 
                       FontSize="18" 
                       FontWeight="Bold" 
                       Margin="15,10"
                       Foreground="#2C3E50"/>

            <Button Grid.Column="1" 
                    Content="✕" 
                    Click="CancelButton_Click"
                    Background="Transparent"
                    BorderThickness="0"
                    Foreground="#2C3E50"
                    FontSize="16"
                    Padding="15,5"
                    Height="40"/>
        </Grid>

        <!-- Основная область -->
        <ScrollViewer Grid.Row="1" Margin="15">
            <StackPanel>
                <!-- Дата и время -->
                <TextBlock Text="Дата и время:" 
                           Margin="0,0,0,5"
                           Foreground="#2C3E50"/>
                <DatePicker x:Name="DatePicker" 
                            Margin="0,0,0,15"
                            Height="30"/>

                <!-- Задача -->
                <TextBlock Text="Задача:" 
                           Margin="0,0,0,5"
                           Foreground="#2C3E50"/>
                <TextBox x:Name="TaskTextBox" 
                         Height="100"
                         TextWrapping="Wrap"
                         AcceptsReturn="True"
                         VerticalScrollBarVisibility="Auto"
                         Margin="0,0,0,15"/>

                <!-- Ученик -->
                <TextBlock Text="Ученик (необязательно):" 
                           Margin="0,0,0,5"
                           Foreground="#2C3E50"/>
                <ComboBox x:Name="StudentComboBox" 
                          Margin="0,0,0,15"
                          Height="30"/>

                <!-- Статус -->
                <CheckBox x:Name="StatusCheckBox" 
                          Content="Задача выполнена" 
                          Margin="0,0,0,15"/>
            </StackPanel>
        </ScrollViewer>

        <!-- Кнопки -->
        <Grid Grid.Row="2" 
              Background="#F5F9FC" 
              BorderBrush="#DCE7F0" 
              BorderThickness="0,1,0,0"
              Padding="15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Button Grid.Column="1" 
                    Content="Сохранить" 
                    Click="SaveButton_Click"
                    Background="#4682B4"
                    Foreground="White"
                    Padding="20,5"
                    Height="35"/>
        </Grid>
    </Grid>
</Window> 